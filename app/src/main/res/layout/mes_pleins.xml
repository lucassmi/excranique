<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--tools:context=".MesPleins"-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="100dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<!--
        <TextView
            android:id="@+id/mesPleins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/mesPleins"
            android:textAlignment="center"
            android:textSize="40dp" />
            -->

        <TableLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableLayout"
            android:orientation="horizontal"
            android:visibility="visible">

            <TableRow android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView android:id="@+id/tvTitreDatePlein"
                    android:layout_height="45dp"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1.3"
                    android:background="@color/backgroundTitreTable"
                    android:textColor="@color/textTitreTable"
                    android:gravity="center"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tvTitreDist"
                    android:layout_height="45dp"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.9"
                    android:background="@color/backgroundTitreTable"
                    android:gravity="center"
                    android:textColor="@color/textTitreTable"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tvTitreLitre"
                    android:layout_height="45dp"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.8"
                    android:background="@color/backgroundTitreTable"
                    android:textColor="@color/textTitreTable"
                    android:gravity="center"
                    android:textSize="12dp"/>

                <TextView
                    android:layout_height="45dp"
                    android:id="@+id/tvTitreConso"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1.1"
                    android:background="@color/backgroundTitreTable"
                    android:textColor="@color/textTitreTable"
                    android:gravity="center"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/tvTitreConso2"
                    android:layout_height="45dp"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:background="@color/backgroundTitreTable"
                    android:textColor="@color/textTitreTable"
                    android:gravity="center"
                    android:textSize="12dp"/>

            </TableRow>

        </TableLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/pasDePlein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="@string/pasDePlein"
        android:textAlignment="center"
        android:textSize="20dp"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/AddPlein"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingAddPlein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        />





</RelativeLayout>